html
    head
        meta(charset="utf-8")
        meta(http-quiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="view-port", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
        title!= title
        link(rel="stylesheet", type="text/css", href="#{cdn.host}semantic/dist/semantic.min.css?#{cdn.version}")
        style(type="text/css").
            .cmd {
                -moz-border-radius: 5px;
                -webkit-border-radius: 5px;
                background-color: #202020;
                border: 4px solid silver;
                border-radius: 5px;
                box-shadow: 2px 2px 3px #6e6e6e;
                color: #e2e2e2;
                display: block;
                font: 1em 'andale mono', 'lucida console', monospace;
                line-height: 1em;
                overflow: auto;
                padding: 15px;
            }
    body
        div(class="ui large top fixed hidden menu")
            div(class="ui container")
                a(class="active item") Home
                a(class="item") Work
                div(class="right menu")
                    div(class="item")
                        a(class="ui button") Log in
                    div(class="item")
                        a(class="ui primary button") Sign up

        div(ng-app="cubeModule", ng-controller="cubeCtrl")
            div.ui.horizontal.divider
            div.ui.horizontal.divider
            div.ui.horizontal.divider
            div.ui.horizontal.divider
            div.ui.horizontal.divider
            canvas#mycanvas.cmd(style="padding: 0px; box-sizing: border-box; image-rendering: -webkit-optimize-contrast !important; width: 100%; min-height: 150px;", tabindex="0")

        div
            script(src="#{cdn.host}bower_components/jquery/dist/jquery.min.js?#{cdn.version}")
            script(src="#{cdn.host}semantic/dist/semantic.min.js?#{cdn.version}")
            script(src="#{cdn.host}bower_components/angular/angular.min.js?#{cdn.version}")
            script(src="#{cdn.host}virtual-scripts/cube/graph.js?#{cdn.version}")
            script(type="text/javascript").
                angular.module('cubeModule', [])
                        .controller('cubeCtrl', ['$scope', function ($scope) {
                        }])
                ;